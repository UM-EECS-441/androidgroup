<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saveConfigButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatasetConfigActivity">

    <TextView
        android:id="@+id/configTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/xAxisConfigSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/xAxisConfigSpinnerLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/xAxisConfigSpinnerLabel" />

    <TextView
        android:id="@+id/xAxisConfigSpinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="X-Axis:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configTitle" />

    <Spinner
        android:id="@+id/timeFormatConfigSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/timeFormatConfigSpinnerLabel"
        app:layout_constraintEnd_toEndOf="@+id/xAxisConfigSpinner"
        app:layout_constraintStart_toStartOf="@+id/xAxisConfigSpinner"
        app:layout_constraintTop_toTopOf="@+id/timeFormatConfigSpinnerLabel" />

    <TextView
        android:id="@+id/timeFormatConfigSpinnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Time Format:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/xAxisConfigSpinnerLabel"
        app:layout_constraintTop_toBottomOf="@+id/xAxisConfigSpinnerLabel" />

    <Button
        android:id="@+id/configSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/timeFormatConfigSpinner"
        app:layout_constraintTop_toBottomOf="@+id/timeFormatConfigSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>