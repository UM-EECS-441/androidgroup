<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/preview_card"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_toEndOf="@id/deleteDatasetButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="4dp"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/dataset_graph_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/graph_placeholder" />

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/dataset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/deleteDatasetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/delete_icon" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preview_card"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#FFFFFF"
            android:text="Insert"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

<!--        <ImageView-->
<!--            android:id="@+id/dataset_graph_preview"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_alignParentLeft="true"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:src="@drawable/graph_placeholder" />-->
    </RelativeLayout>


</androidx.cardview.widget.CardView>